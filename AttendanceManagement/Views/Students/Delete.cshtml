    <link rel="stylesheet" href="~/assets/scss/style.css">
    <link href="~/assets/css/lib/vector-map/jqvmap.min.css" rel="stylesheet">

    <link href='https://fonts.googleapis.com/css?family=Open+Sans:400,600,700,800' rel='stylesheet' type='text/css'>

    <!-- <script type="text/javascript" src="https://cdn.jsdelivr.net/html5shiv/3.7.3/html5shiv.min.js"></script> -->

</head>
<body>


    <div id="right-panel" class="right-panel">

        <!-- Header-->
        <header id="header" class="header">

            <div class="header-menu">
                <div class="col-sm-7">

                    <h2 style="text-align: right;">  <img style="width: 7%; margin-right: 3% " src="~/assets/images/logos.png" /> Aikya Software Wing </h2>

                </div>

            </div>

        </header><!-- /header -->
        <!-- Header-->

        <div class="breadcrumbs">
                <div class="page-header float-left">
                    <div class="page-title">
                        <h1>VIEW / Subjects / Delete</h1>
                    </div>
                </div>

        </div>

        <div class="content mt-3">
            <div class="animated fadeIn">


                <div class="col-lg-1"> </div>
                <div class="col-lg-10 ">
                    <div class="card">
                        <div class="card-header">
                            <strong>Are you sure you want to Delete this Record ?</strong>
                        </div>

                        <div class="card-body card-block">
                            <form action="" method="post" enctype="multipart/form-data" class="form-horizontal">
                                <div class="row form-group">
                                    <div class="col col-md-3"><label class=" form-control-label">USN</label></div>
                                    <div class="col-12 col-md-9">
                                        <p class="form-control-static">      @Html.DisplayFor(model => model.USN)</p>
                                    </div>

                                    <div class="col col-md-3"><label class=" form-control-label">Name</label></div>
                                    <div class="col-12 col-md-9">
                                        <p class="form-control-static">       @Html.DisplayFor(model => model.Name)</p>
                                    </div>

                                    <div class="col col-md-3"><label class=" form-control-label">Section</label></div>
                                    <div class="col-12 col-md-9">
                                        <p class="form-control-static">     @Html.DisplayFor(model => model.Section)</p>
                                    </div>

                                    <div class="col col-md-3"><label class=" form-control-label">Semester</label></div>
                                    <div class="col-12 col-md-9">
                                        <p class="form-control-static">     @Html.DisplayFor(model => model.Sem)</p>
                                    </div>

                                    <div class="col col-md-3"><label class=" form-control-label">Department Name</label></div>
                                    <div class="col-12 col-md-9">
                                        <p class="form-control-static">         @Html.DisplayFor(model => model.Department.Name)</p>
                                    </div>



                                </div>

                            </form>
                        </div>



                        <div class="card-footer">

                            @using (Html.BeginForm())
                            {
                                @Html.AntiForgeryToken()

                                <div class="form-actions no-color">

                                    <button type="submit" value="Delete" class="btn btn-danger btn-sm">
                                        <i class="fa fa-ban"></i> Delete
                                    </button>


                                    <a class="btn btn-primary btn-sm" onclick="history.go(-1); return false;" href="#"> <i class="fa fa-dot-circle-o"></i> Back To List</a><br />

                                </div>
                            }
                        </div>

                    </div>

                </div><!-- .animated -->
            </div><!-- .content -->


        </div><!-- /#right-panel -->
        <!-- Right Panel -->
    </div>

    <script src="assets/js/vendor/jquery-2.1.4.min.js"></script>
    <script src="assets/js/popper.min.js"></script>
    <script src="assets/js/plugins.js"></script>
    <script src="assets/js/main.js"></script>


